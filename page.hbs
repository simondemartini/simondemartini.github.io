{{#post}}
{{!< default}}

<article class="{{post_class}} wrapper">
    <header class="head link-title">
        <h1><a href="{{url}}">{{{title}}}</a></h1>

        {{! Display tags, if assigned}}
        {{#if tags}}
        <ul class="tags link-secondary"><li>{{tags separator="</li><li>"}}</li></ul>
        {{/if}}

    </header>
    <section class="post">
        {{! Display header image, if assigned }}
        {{#if image}}
        <div class="big-img">
            <img src="{{image}}" />
        </div>
        {{/if}}

        {{content}}

    </section>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
    </footer>
</article>

{{/post}}
